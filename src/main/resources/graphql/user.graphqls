type User {
    uid: ID!
    name: String!
    surname: String!
    remark: String
}

type Query {
    findAllUsers: [User]!
    user(id: ID!) : User
}

type Mutation {
    addUser(name: String!, surname: String!, remark: String): User
    updateUser(uid: ID!, name: String, surname: String, remark: String): User
    deleteUser(uid: ID!): Boolean!
}